<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MainScreen.HomeM">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tosca_1"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingTop="30dp"
        android:paddingEnd="40dp"
        android:paddingBottom="90dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:lineHeight="18dp"
            android:text="Halo,"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/nameMitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:text="Juki Andrianto"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:background="@drawable/infohome"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        android:paddingTop="20dp"
        android:paddingEnd="40dp"
        android:paddingBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="84"
                android:textColor="@color/tosca_1"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/regular"
                android:text="Total Pesanan"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/bold"
                android:text="4.3"
                android:textColor="@color/tosca_1"
                android:textSize="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/regular"
                android:text="Rata-rata Penilaian"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textPesaktif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.067"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:text="Pesanan Aktif"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:paddingLeft="60dp"
            android:text="(Proses Tambal)"
            android:textColor="#2EBF4E"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pesananAktif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textPesaktif"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/pesAktif"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button"
            android:orientation="horizontal"
            android:paddingStart="13dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dewipersik"
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_corner">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Dewi Persik"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/tireactive"
                        android:layout_gravity="center_vertical">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/regular"
                        android:text="Tambal Ban Biasa"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/arrowaktif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrowactive"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-20dp">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textNon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesananAktif"
        app:layout_constraintVertical_bias="0.067"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bold"
            android:text="Pesanan Terkini"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/regular"
            android:paddingLeft="85dp"
            android:text="Lihat semua"
            android:textColor="@color/descFont"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textNon"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/pesNon"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/pesananterkini"
            android:orientation="horizontal"
            android:paddingStart="13dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/dewipersik"
                android:scaleType="fitXY"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_corner">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Dewi Persik"
                    android:textColor="@color/tosca_1"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/tirenon"
                        android:layout_gravity="center_vertical">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/regular"
                        android:text="Tambal Ban Biasa"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/arrownon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrownon"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-20dp">

        </ImageView>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>