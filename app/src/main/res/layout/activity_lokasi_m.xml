<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MainScreen.Mitra.LokasiM">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tosca_1"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/arrowback"
            android:layout_marginStart="20dp">

        </ImageView>

        <TextView
            android:id="@+id/pageLokasi"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Tambah Lokasi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.11"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:text="Nama Tempat"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextUser" />

        <EditText
            android:id="@+id/editTempatM"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/text_space"
            android:drawablePadding="8dp"
            android:ems="10"
            android:foregroundTint="#fff"
            android:hint="Tambal Ban Bang John"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/formFont"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:text="Alamat Lengkap"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextUser" />

        <EditText
            android:id="@+id/editAlamat"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:layout_marginBottom="16dp"
            android:background="@drawable/text_space"
            android:drawablePadding="8dp"
            android:ems="10"
            android:foregroundTint="#fff"
            android:hint="Jl. Bla Bla No.30, Kecamatan, Kota"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/formFont"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:text="Jenis Ban"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextPassword" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/pilNonTublesM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non tubles"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/pilTublesM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tubles"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bold"
                android:text="Layanan Tambahan"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/regular"
                android:text="(Opsional)"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <CheckBox
                android:id="@+id/pilLayananBDM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ban Dalam"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/pilLayananBLM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Ban Luar"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnTambahLokasi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_button"
            android:text="Tambah Lokasi"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>