<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MitraRegisterScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="100dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Akun"
                android:textSize="26dp"
                android:textColor="#323232"
                android:paddingLeft="30dp"
                android:fontFamily="@font/bold"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit mbuh lah"
                android:paddingLeft="30dp"
                android:textColor="#909090"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextMitraName"/>

            <EditText
                android:id="@+id/editTextMitraName"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:foregroundTint="#fff"
                android:hint="Alex"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#80ABBE"

                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Temppat Mitra"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextWorkName"/>

            <EditText
                android:id="@+id/editTextWorkName"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:foregroundTint="#fff"
                android:hint="Tambal Ban Alex"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#80ABBE"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domisili Kota"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextMitraCity"/>

            <EditText
                android:id="@+id/editTextMitraCity"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:foregroundTint="#fff"
                android:hint="Surabaya"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#80ABBE"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Lengkap"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextMitraCity"/>

            <EditText
                android:id="@+id/editTextMitraAdress"
                android:layout_width="325dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:foregroundTint="#fff"
                android:hint="Surabaya"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="#80ABBE"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan Tambal Ban"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextUser"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Non tubles"
                    android:textSize="15dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Tubles"
                    android:textSize="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan Tambahan (opsional)"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextUser"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Ban Dalam"
                    android:textSize="15dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Ban Luar"
                    android:textSize="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Handphone"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextMitraTelp"/>

            <EditText
                android:id="@+id/editTextMitraTelp"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:foregroundTint="#fff"
                android:hint="No telp"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#80ABBE"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:paddingLeft="30dp"
                android:textColor="#323232"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/editTextMitraPassword"/>

            <EditText
                android:id="@+id/editTextMitraPassword"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:background="@drawable/text_space"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#80ABBE"
                android:textSize="17dp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/UserRegister"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_button"
                android:text="Masuk"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>